.message
  .message1
    .message1__name
      = message.user.name
    .message1__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .message2
    - if message.content.present?
      .message2__text
        = message.content
    = image_tag message.image.url, class: 'message2__image' if message.image.present?